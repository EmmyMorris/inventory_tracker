<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.quantity %></td>
        <td><%= link_to 'View', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to "Delete", product, method: :delete  %></tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path(:user_id => @user.id) %><br>
<%= link_to 'Back', root_path %>
